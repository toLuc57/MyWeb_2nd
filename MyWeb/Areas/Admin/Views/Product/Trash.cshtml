@model IEnumerable<MyWeb.Models.Product>

@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-success">
                    <i class="fas fa-arrow-left"></i> Quay về danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th>Tên sản phẩm</th>
                    <th>Link</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>
                    <th style="width:20px;" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkId" type="checkbox" />
                        </td>
                        <td>@item.Name</td>
                        <td>
                            <a href="~/san-pham/@item.Slug">
                                @item.Slug
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Restore","Product", new {@id = item.Id })" class="btn btn-sm btn-info">
                                <i class="fas fa-trash-restore-alt"></i>
                            </a>         
                            <a href="@Url.Action("Delete","Product", new {@id = item.Id })" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>